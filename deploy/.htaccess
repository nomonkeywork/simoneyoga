# Main .htaccess for IONOS deployment

# Set environment variables
<IfModule mod_env.c>
    SetEnv DB_HOST db5019339232.hosting-data.io
    SetEnv DB_NAME dbs15144294
    SetEnv DB_USER dbu529946
    SetEnv DB_PASS TivedenYoga_Retreat_2026
</IfModule>

# Enable RewriteEngine
RewriteEngine On

# Handle React Router - redirect all requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^ index.php [L]

# API routes
RewriteRule ^api/(.*)$ api/$1 [L]

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

